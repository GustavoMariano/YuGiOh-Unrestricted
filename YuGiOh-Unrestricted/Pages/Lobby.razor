@page "/lobby"
@inject AppState App

<h3>Lobby</h3>

@if (App.UserId == Guid.Empty)
{
    <p>You need to login. <a href="/login">Login</a></p>
}
else
{
    <div class="lobby-actions" style="display:flex; flex-direction:column; gap:16px; max-width:320px;">
        <form method="post" action="/lobby/create">
            <button type="submit" class="btn">Create Battle</button>
        </form>

        <form method="post" action="/lobby/join">
            <input name="code" placeholder="Battle code" value="@battleCode" />
            <button type="submit" class="btn">Join Battle</button>
        </form>

        <a class="btn" href="/decks">Build Decks</a>
    </div>
}

@code {
    private string battleCode = "";
}
